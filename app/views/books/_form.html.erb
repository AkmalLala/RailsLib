<%= form_with(model: book, local: true, :html => { :class => "form-horizontal", multipart: true }) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.text_field :title, id: :book_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :img, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.file_field :img, id: :book_img, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :synopsis, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.text_area :synopsis, id: :book_synopsis, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :author_id, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
      <%= form.collection_select :author_id, Author.all, :id, :name, prompt: true, class: "form-control" %>
    </div>
    <!-- <%= form.number_field :author_id, id: :book_author_id %> -->
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit current_page?(new_book_path) ? "Create" : "Update", :class => "btn btn-default" %>
      <%= current_page?(new_book_path) ? "" : (link_to 'Show', @book, :class => "btn btn-info") %>
      <%= link_to 'Back', books_path, :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
