<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cover</th>
      <th>Synopsis</th>
      <th>Author</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.img.url(:thumb) %></td>
        <td><%= book.synopsis %></td>
        <td><%= book.author.name %></td>
        <td><%= link_to 'Show', book, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-default" %>
