<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @author.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @author.email %>
</p>

<h3>Books composed by <b><%= @author.name %></b></h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Cover</th>
      <th>Synopsis</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @author.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.img.url(:thumb) %></td>
        <td><%= book.synopsis %></td>
        <td><%= link_to 'Show', book, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_author_path(@author),class: "btn btn-primary" %>
<%= link_to 'Back', authors_path,class: "btn btn-default" %>
