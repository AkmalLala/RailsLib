<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= author.email %></td>
        <td><%= link_to 'Show', author, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_author_path(author), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', author, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: "btn btn-primary" %>
